<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
  <Properties>
    <Property name="log-path">./logs</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} %-5p [%t] %c{2}: %m%n" />
    </Console>
    <RollingFile name="RollingFile" fileName="${log-path}/rainbow.log"
      filePattern="${log-path}/rainbow-%d{yyyy-MM-dd}-%i.log">
      <PatternLayout>
        <pattern>%d{ISO8601} %-5p [%t] %c{2}: %m%n</pattern>
      </PatternLayout>
      <Policies>
         <OnStartupTriggeringPolicy />
         <SizeBasedTriggeringPolicy size="250 MB" />
      </Policies>
      <DefaultRolloverStrategy max="4" />
    </RollingFile>
  </Appenders>

  <Loggers>
    <Root level="debug">
      <AppenderRef ref="Console" />
      <!--  <AppenderRef ref="RollingFile" />  -->
    </Root>


    
    <!-- 
      Change level to debug to log MyBatis SQL statements. name is mapper 
      namespace.
     -->
<!--    <Logger name="Dealer" level="error" additivity="false">-->
<!--      <AppenderRef ref="Console" />-->
<!--    </Logger>     -->

  </Loggers>
</Configuration>
